#include <mega328p.h>
#include <delay.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Khai báo các bi?n toàn c?c
int adc_value;
char message[20];

// Khai báo nguyên m?u hàm
void adc_init(void);
void uart_init(void);
void uart_send_string(char *string);
void flash_led(int times);

void main(void)
{
	// Khai báo bi?n
	char buffer[30];

	// Kh?i t?o ADC và UART
	adc_init();
	uart_init();

	// Kh?i t?o chân PD6 là d?u ra
	DDRD.6 = 1;

	while (1)
		{
		// Ð?c giá tr? ADC t? chân ADC5
		ADCSRA |= (1 << ADSC);  // B?t d?u chuy?n d?i ADC
		while (ADCSRA & (1 << ADSC)==0);  // Ch? chuy?n d?i ADC hoàn t?t
		adc_value = ADCW;  // Luu giá tr? ADC vào bi?n adc_value

		// X? lý giá tr? ADC và di?u khi?n LED và g?i thông di?p
		if (adc_value > 800)
			{
			sprintf(message, "System Alarm\r\n");  // T?o thông di?p
			flash_led(8);  // Nh?p nháy dèn 8 l?n (4 Hz x 8 = 32 Hz)
			}
		else if(adc_value < 800)
			{
			sprintf(message, "Alarm over\r\n");  // T?o thông di?p
			PORTD.6 = 0;  // T?t dèn LED
			}
		uart_send_string(message);  // G?i thông di?p qua UART

		// Ch? 500ms tru?c khi d?c giá tr? ADC l?n ti?p theo
        ADCSRA |= (1 << ADIF);
		delay_ms(100);
		}
}

// Hàm kh?i t?o ADC
void adc_init(void)
{
	ADMUX = (1 << REFS0) | (1 << MUX2) | (1 << MUX0);  // Ch?n ngu?n tham chi?u AVCC, ch?n kênh ADC5
	ADCSRA = (1 << ADEN) | (1 << ADPS2) | (1 << ADPS1) | (1 << ADPS0);  // Cho phép ADC, chia t? l? clock là 128
}

// Hàm kh?i t?o UART
void uart_init(void)
{
	UCSR0A = 0;
	UCSR0B = (1 << RXEN0) | (1 << TXEN0);  // Cho phép UART nh?n và g?i
	UCSR0C = (1 << UCSZ01) | (1 << UCSZ00);  // Ð?t kích thu?c khung truy?n là 8 bit, không có bit ki?m tra và bit stop
	UBRR0H = 0;
	UBRR0L = 8;  // Thi?t l?p t?c d? baud
}

// Hàm g?i chu?i thông di?p qua UART
void uart_send_string(char *string)
{
	while (*string != '\0')
		{
		while ((UCSR0A & (1 << UDRE0)) == 0); // Ch? d?n khi có th? g?i ký t?
		UDR0 = *string; // G?i ký t?
		string++; // Tang con tr? d? g?i ký t? ti?p theo
		}
}

// Hàm nh?p nháy dèn LED
void flash_led(int times)
{
	int i;

	for (i = 0; i < times; i++)
		{
		PORTD.6 = 1; // B?t dèn LED
		delay_ms(125); // Ch? 125ms (4 Hz)
		PORTD.6 = 0; // T?t dèn LED
		delay_ms(125); // Ch? 125ms (4 Hz)
		}
}